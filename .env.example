# Environment variables for Personal AI Employee System

# Gmail API credentials
GOOGLE_APPLICATION_CREDENTIALS=your_google_application_credentials_path
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token
GOOGLE_ACCESS_TOKEN=your_google_access_token

# WhatsApp tokens and keys
WHATSAPP_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_whatsapp_webhook_verify_token

# LinkedIn tokens and keys
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_API_KEY=your_linkedin_api_key
LINKEDIN_SECRET_KEY=your_linkedin_secret_key

# LinkedIn (match what MCP server expects)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Gmail MCP (separate from Google watcher above)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_ACCESS_TOKEN=your_gmail_access_token

# Facebook Page (Graph API)
# Get tokens: https://developers.facebook.com/tools/explorer/
FB_PAGE_ID=your_facebook_page_id
FB_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FB_APP_ID=your_facebook_app_id
FB_APP_SECRET=your_facebook_app_secret

# Twitter / X (API v2)
# Get tokens: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_USER_ID=your_twitter_numeric_user_id

# Instagram Business (uses same Facebook Page Access Token)
# Get IG User ID via Graph API Explorer
IG_USER_ID=your_instagram_business_account_id

# Odoo Community ERP (Gold Tier)
ODOO_URL=http://localhost:8069
ODOO_DB=mycompany
ODOO_USERNAME=admin
ODOO_PASSWORD=your_odoo_admin_password

# Other API keys and secrets
API_KEY=your_api_key
SECRET_KEY=your_secret_key
DATABASE_URL=your_database_url