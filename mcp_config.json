{
  "mcp_servers": [
    {
      "name": "file_system",
      "command": "node",
      "args": ["MCP_SERVERS/file_system_mcp/server.js"],
      "env": {
        "VAULT_PATH": "./Obsidian_Vault"
      }
    },
    {
      "name": "gmail",
      "command": "node",
      "args": ["MCP_SERVERS/gmail_mcp/server.js"],
      "env": {
        "GMAIL_CREDENTIALS": "./MCP_SERVERS/gmail_mcp/credentials.json"
      }
    },
    {
      "name": "whatsapp",
      "command": "node",
      "args": ["MCP_SERVERS/whatsapp_mcp/server.js"],
      "env": {
        "WHATSAPP_SESSION_PATH": "./MCP_SERVERS/whatsapp_mcp/session"
      }
    },
    {
      "name": "linkedin",
      "command": "node",
      "args": ["MCP_SERVERS/linkedin_mcp/server.js"],
      "env": {
        "LINKEDIN_ACCESS_TOKEN": "${LINKEDIN_ACCESS_TOKEN}"
      }
    },
    {
      "name": "context7",
      "command": "node",
      "args": ["MCP_SERVERS/context7_mcp/server.js"],
      "env": {
        "CONTEXT7_API_KEY": "ctx7sk-e4a85452-50e5-4ac0-a590-9987fc59c1aa"
      }
    }
  ]
}